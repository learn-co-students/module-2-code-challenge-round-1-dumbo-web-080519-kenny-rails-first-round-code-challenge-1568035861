<h1>Create a new Vendor Sweet</h1>

<% if @vendor_sweet.errors.any? %>
    <% flash[:errors].each do |message|%>
        <p><%= message %></p>
    <%end%>
<%end%>


<%= form_for @vendor_sweet do |f|%>
    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.label :vendor_id %>
    <%= f.collection_select :vendor_id, Vendor.all, :id, :name %>

    <%= f.label :sweet_id %>
    <%= f.collection_select :sweet_id, Sweet.all, :id, :name %>

    <%= f.submit %>
<%end%>